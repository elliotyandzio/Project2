<div class="row">
  <% if(messages.danger){ %>
    <div class="col s12 l12">
      <div class="card red lighten-3">
        <div class="card-content red-text">
          <span class="card-title"><%= messages.danger %></span>
        </div>
      </div>
    </div>
  <% } %>
  <h1 class="center">Register</h1>
  <form class="col l12 m12 s12" action="/register" method="post">
      <div class="input-field col l12 m12 s12">
        <input type="text" name="username" id="username_field">
        <label for="username_field">Username</label>
      </div>
      <div class="input-field col l12 m12 s12">
        <input type="email" name="email" id="email_field" required>
        <label for="email_field">Email</label>
      </div>
      <div class="input-field col l12 m12 s12">
        <input type="password" name="password" id="password_field" required>
        <label for="password_field">Password</label>
      </div>
      <div class="input-field col l12 m12 s12">
        <input type="password" name="passwordConfirmation" id="password_field" required>
        <label for="password_field">Password Confirmation</label>
      </div>

      <div class="input-field col l12 m12 s12 center">
        <button class="btn blue lighten-1"> Signup</button>
      </div>
    </form>
</div>
