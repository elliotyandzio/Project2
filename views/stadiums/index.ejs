<h1 class="center-align">Stadiums</h1>
<div class="row">
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a class="active blue-text white" href="#test1">All Stadiums</a></li>
      <li class="tab col s3"><a class="blue-text white" href="#test2">My Stadiums</a></li>
    </ul>
  </div>
  <div id="test1" class="col s12">
    <% stadiums.forEach(stadia => { %>
      <div class="col s12 m6">
        <div class="card">
          <div class="card-image">
            <img src="<%=stadia.photo%>">
            <a href="/stadiums/<%= stadia._id %>" class="btn-floating halfway-fab waves-effect waves-light green"><i class="material-icons">find_in_page</i></a>
          </div>
          <div class="card-content">
          <span class="card-title"><%=stadia.name%></span>
          </div>
          <div class="card-action">
          </div>
        </div>
      </div>
    <% }) %>
  </div>
  <div id="test2" class="col s12">
    <% stadiums.forEach(stadia => { %>
      <%if((stadia.user && stadia.user.id) === locals.user.id ){%>
          <div class="col s12 m6">
            <div class="card">
              <div class="card-image">
                <img src="<%=stadia.photo%>">
                <a href="/stadiums/<%= stadia._id %>" class="btn-floating halfway-fab waves-effect waves-light green"><i class="material-icons">find_in_page</i></a>
              </div>
              <div class="card-content">
              <span class="card-title"><%=stadia.name%></span>
                <p><%=stadia.team%></p>
                <p><%=stadia.address%></p>
              </div>
              <div class="card-action">
                <div class="right-align">
                <form action="/stadiums/<%= stadia._id %>/edit">
                  <input type="hidden" value="Edit" />
                  <button class="btn orange"><i class="material-icons small">create</i></button>
                </form>
                <form class="" action="/stadiums/<%= stadia.id %>" method="POST">
                  <input type="hidden" name="_method" value="DELETE">
                  <button class="btn red"><i class="material-icons small">close</i></button></div>
                </form>
              </div>
            </div>
          </div>
      <% } %>
      <% }) %>
  </div>
</div>
